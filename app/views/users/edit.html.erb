<% if logged_in? %>
<header class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
      <%= link_to "Zyuken", blogs_path,id: "logo"%>
      <nav>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "ホーム", blogs_path %></li>
          <li><%= link_to "仲間を探す",   '#' %></li>
          <li><%= link_to "記録する", new_blog_path %></li>
          <li><%= link_to "その他",edit_user_path(current_user) %></li>
          <li><%= link_to "ログアウト",logout_path,method: :delete %></li>
        </ul>
      </nav>
    </div>
  </header>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.submit "プロフィールを変更する", class: "btn btn-primary" %>
    <% end %>
<% end %>
  </div>

</div>
